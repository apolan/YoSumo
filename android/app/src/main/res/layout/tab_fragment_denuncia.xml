<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/palette1_white">

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Crear denuncia"
            android:id="@+id/button7"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_orange"
            android:layout_marginTop="30dp"
            android:onClick="goCreateDenuncia"
            android:textSize="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/palette1_blue"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis denuncias"
                android:id="@+id/textView12"
                android:textColor="@color/palette1_white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center|start|fill_vertical|end|center_horizontal|right"
                android:layout_marginRight="20dp"
                android:layout_gravity="center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Actualizar"
                android:id="@+id/button6"
                android:textAllCaps="false"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/btn_gray"
                android:onClick="pushDenuncia"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="1dp" />

        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/lst_denuncias"
            android:background="@color/palette1_white"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>