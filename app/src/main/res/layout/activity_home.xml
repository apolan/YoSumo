<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yosumo.src.activity.HomeActivity"
    android:background="@color/palette1_blue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tus impuestos pagados"
            android:id="@+id/txtLabel1"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/palette1_white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_weight="0.49">

            <TextView
                android:layout_width="258dp"
                android:layout_height="140dp"
                android:text="$"
                android:id="@+id/txtCounter"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="100dp"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/palette1_white" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="69dp"
                android:layout_height="129dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IVA"
                    android:id="@+id/chkBoxTipo"
                    android:checked="true"
                    android:textColor="@color/palette1_white"
                    android:buttonTint="@color/palette1_white"
                    android:layout_marginTop="30dp"
                    android:onClick="setIVA"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ICO"
                    android:id="@+id/checkBox"
                    android:checked="true"
                    android:textColor="@color/palette1_white"
                    android:buttonTint="@color/palette1_white"
                    android:layout_marginTop="3dp"
                    android:onClick="setICO"
                    />
            </LinearLayout>

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Registrar factura"
            android:id="@+id/btnRegistrarFactura"
            android:onClick="goRegistrarFactura"
            android:layout_marginTop="30dp"
            />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="Mostrar facturas"
        android:id="@+id/btnMostrarFacturas"
        android:layout_marginTop="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Borrar facuras fisicas"
            android:id="@+id/btnBorrarFacturas"
            android:layout_marginTop="10dp"
            android:onClick="borrarFacturas"/>

        <!--DM 20160918 - I -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Mostrar Usuarios de SQL"
            android:id="@+id/buttonMostrarUsuarios"
            android:layout_marginTop="10dp"
            android:onClick="mostrarUsuarios"/>
        <!--DM 20160918 - F -->
    </LinearLayout>

</RelativeLayout>
